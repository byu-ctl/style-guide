h1, h2, h3, h4, h5, h6 { font-weight: bold; }
h1 { margin: 1em 0 .25em; color: $blue2; }
h2 { margin: 1.5em 0 .25em; color: $blue3; }
h3, h4, h5, h6 { margin: 1.5em 0 .25em; color: $blue3; }
h1 { font-size: 1.7em; }
h2 { font-size: 1.25em; }
h3 { font-size: 1.1em; }
h4, h5, h6 { font-size: 1em; margin-top: 1em; margin-bottom: 0; color: #444; }
h4 {margin-top:1.25em;}
h3 + p {margin-top:.5em;}
h4 + p, h5 + p, h6 + p { margin-top: 0; }
h5, h6 { font-weight: normal; }
h6 { font-style: italic; }
h1 + h2, h2 + h3, h3 + h4, h4 + h5, h5 + h6 { margin-top: 1em; }